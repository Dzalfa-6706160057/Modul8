<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:layout_margin="16dp"
    android:orientation="vertical"
    tools:background="@color/colorPrimary">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">
        <ImageView
            android:id="@+id/img_timeline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_check_circle_black_24dp"/>
        <TextView
            android:id="@+id/date_tl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tuesday, March 13, 2018"
            android:textSize="20sp"
            android:layout_marginLeft="7dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/vocab_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/first_tl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-first vocab"/>
        <TextView
            android:id="@+id/second_tl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-second vocab"/>
        <TextView
            android:id="@+id/third_tl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-third vocab"/>
        <TextView
            android:id="@+id/fourth_tl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-fourth vocab"/>
        <TextView
            android:id="@+id/fifth_tl_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-fifth vocab"/>
    </LinearLayout>

</LinearLayout>